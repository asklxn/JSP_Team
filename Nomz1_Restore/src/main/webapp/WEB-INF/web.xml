<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Nomz1</display-name>

    <welcome-file-list>
	    <welcome-file>productList</welcome-file>
	</welcome-file-list>
	
	<servlet>
	  <servlet-name>UpdateProductServlet</servlet-name>
	  <servlet-class>controller.UpdateProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>UpdateProductServlet</servlet-name>
	  <url-pattern>/updateProduct</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>ProductListServlet</servlet-name>
	    <servlet-class>controller.ProductListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>ProductListServlet</servlet-name>
	    <url-pattern>/productList</url-pattern>
	</servlet-mapping>
	
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddItemServlet</servlet-name>
        <servlet-class>controller.AddItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddItemServlet</servlet-name>
        <url-pattern>/addItem</url-pattern>
    </servlet-mapping>

</web-app>
